<%= form_for @new_list_item, :html => { :multipart => true } do |f| %>
  <div class='bordered new_item_container'>
    <div class='new_item' style='width:100%;height:30px;'>
      <%= f.text_field 'title', :class => "noFocus transparent_bg new_item_text",
                                             :style => 'float:left; width:calc(100% - 33px);height:20px;',
                                             :placeholder => t('whats_up') + current_user.try(:profile).try(:fname) + "?" %>
      <%= image_submit_tag("plus.png", :class => '', :style => 'margin:7px 3px 7px 0; float:right;' ) %>
    </div>
  </div>
<% end %>
