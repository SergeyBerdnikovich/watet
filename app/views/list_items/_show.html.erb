 
 <%  list_item = @list_item  if @list_item %>
 <div class='row-fluid'>
  <div class='span9 toggler'>  
  <span id='list_item_title' class='toggler' ><%= list_item.title%></span><br>
  <font id='list_item_name' class='toggler'><%= list_item.user.profile.fname %></font>
</div>
<div class='span3'>
  <div class='pull-right' id='buttons'>
    
  <%= link_to ''.html_safe + image_tag("edit.png"), edit_list_item_path(list_item), :remote => true,
  :class => 'btn btn-link' %>
  <%= image_tag("geo.png") %>
  <%= link_to ''.html_safe + image_tag("trash.png"), list_item_path(list_item),
  :data => { :confirm => t('.confirm',
  :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
  :class => 'btn btn-link' %>
</div><br>
<span class='pull-right'>
   <font id='list_item_name'><%= l list_item.created_at %></font>
</span>
</div>
</div>

  <div class='row-fluid toggler'>
    <div class='span11 toggler'>
      <div id='list_item_des'>
  <%= list_item.description %>
</div>
    </div>
</div>

  <% if list_item.images %>
  <% if list_item.images.size != 0 %>
<div class='row-fluid toggler'>
  <span id='list_item_images'>
  <% list_item.images.each do |image| %>
    <%= link_to image_tag(image.image.url(:thumb)), list_item_image_path(image.list_item_id, :id=>image.id) if image.image.url.index('missing.png') == nil %>
    <% end %>
    </span>
  </div>
  <% end %>
    <% end %>
