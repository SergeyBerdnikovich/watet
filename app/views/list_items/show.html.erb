<%- model_class = ListItem -%>
<div id='banners'>
  <p id='nike'><%= image_tag '/assets/maket/nike.png' %></p>
  <a href="#"><p id='apple'></p></a>
  <p id='volkswagen'><%= image_tag '/assets/maket/volkswagen.png' %></p>
</div>
<div id='content'>
<h4 style='margin-left:20px;'><%= @user.profile.try(:fname) %>'s list</h4>
  <%= render :partial => 'front_end_form' if @list_item %>

  <% @list_items.each do |list_item| %>
    <div class='listitem'>
      <table class="table" >
        <tbody>
          <tr>
            <td><h5><%= list_item.title %></h5></td>
            <%  if @new_list_item %>
              <td class='pull-right'>
                <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_list_item_path(list_item),
                                                                             :class => 'btn btn-mini' %>
                <%= link_to t('.destroy', :default => t("helpers.links.destroy")), list_item_path(list_item),
                                                                                   :method => :delete,
                                                                                   :data => { :confirm => t('.confirm',
                                                                                   :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                                                                   :class => 'btn btn-mini btn-danger' %>
              </td>
            <% end %>
          </tr>
          <tr>
            <td>Some user</td>
            <td class='pull-right'><%= l list_item.created_at, :format => :short %></td>
          </tr>
          <tr>
            <td colspan=2><%= list_item.description %></td>
          </tr>
          <tr>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
<div id='friends'>
  <% @friends.each do |friend| %>
    <a href="<%= list_item_path(friend.user) %>" id='<%= friend.id %>'>
      <p>
        <%= friend.name %><br />
        <span>
          <%= friend.user.try(:list_items).try(:last).try(:title) %>
        </span>
      </p>
    </a>
  <% end %>
</div>
<div class='clear'></div>
<% if current_user %>
  <div id='email'>
    <%= form_tag(send_list_items_path) do %>
      <%= email_field_tag :email %>
      <%= submit_tag 'send list items' %>
    <% end %>
  </div>
<% end %>