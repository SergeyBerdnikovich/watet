<%- model_class = ListItem -%>
<script>
$(function() {
  $( "#sortable" ).sortable();
  $( "#sortable" ).disableSelection();
});
</script>

<div class="row">
<div id='banners' class='span2'>
<p id='nike'><%= image_tag '/assets/maket/nike.png' %></p>
<p id='apple'><%= image_tag '/assets/maket/apple.png' %></p>
<p id='volkswagen'><%= image_tag '/assets/maket/volkswagen.png' %></p>
</div>
<div  class='span6'>
<h4><%= current_user.try(:profile).try(:fname) %>'s list</h4>
<%= render :partial => 'front_end_form' if @new_list_item %>
<span id="sortable">

<% @list_items.each do |list_item| %>  
  <div class="ui-state-default draggable" id='<%= list_item.id %>'>
  <div class='hr'></div>
  <div class='list_item li' id='li<%= list_item.id %>'>
  <% if list_item %>
 <%= render 'show' , list_item: list_item %>
  <% end %>
    </div>
    </div>
    <% end %>
    </span>
    </div>
    <div id='friends' class='span2'>
    <% @friends.each do |friend| %>
      <a href="<%= list_item_path(friend.user) %>" id='<%= friend.id %>'>
      <p>
      <%= friend.name %><br />
      <span>
      <%= friend.user.try(:list_items).try(:last).try(:title) %>
      </span>
      </p>
      </a>
      <% end %>
      </div>
     
      <div class="row-fluid">
      <div id='banners' class='span3 offset2'>
      <div class='bordered'>
      <%= form_tag(send_list_items_path) do |f| %>
      <div class='row-fluid'>
        <div class='span11'>
        <%= text_field_tag :email, "",:placeholder => t(:share_email)  ,:class => "noFocus transparent_bg send_email" %>
        </div>
        <div class='span1'>
        <%= image_submit_tag("letter.png", :class => 'new_li_submit' ) %>
        </div>
        <% end %>
        </div>
        </div>
        </div>

                </div>
        </div>