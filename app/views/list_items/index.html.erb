<%- model_class = ListItem -%>
<script>
  $(function() {
    $( "#sortable" ).sortable();
    $( "#sortable" ).disableSelection();
  });
  </script>


<div id='banners'>
  <p id='nike'><%= image_tag '/assets/maket/nike.png' %></p>
  <a href="#"><p id='apple'></p></a>
  <p id='volkswagen'><%= image_tag '/assets/maket/volkswagen.png' %></p>
</div>
<div id='content'>
<h4><%= current_user.try(:profile).try(:fname) %>'s list</h4>
  <%= render :partial => 'front_end_form' if @list_item %>
<ul id="sortable">

  <% @list_items.each do |list_item| %>
   <li class="ui-state-default" id='<%= list_item.id %>'>
    <div class='listitem'>
      <table class="table" >
        <tbody>
          <tr>
            <td><h5><%= list_item.title%></h5></td>
            <% if @list_item %>
              <td class='pull-right'>
                <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_list_item_path(list_item),
                                                                             :class => 'btn btn-mini' %>
                <%= link_to t('.destroy', :default => t("helpers.links.destroy")), list_item_path(list_item),
                                                                                   :method => :delete,
                                                                                   :data => { :confirm => t('.confirm',
                                                                                   :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                                                                   :class => 'btn btn-mini btn-danger' %>
              </td>
            <% end %>
          </tr> 
          <tr>
            <td><%= list_item.user.profile.fname %></td>
            <td class='pull-right'><%= l list_item.created_at, :format => :short %></td>
          </tr>
          <tr>
            <td colspan=2><%= list_item.description %></td>
          </tr>
          <% if list_item.images %>
          <tr>
            <td colspan=2>
              <% list_item.images.each do |image| %>
              <%= link_to image_tag(image.image.url(:thumb)), list_item_image_path(image.list_item_id, :id=>image.id) %>
              <% end %>
            </td>
          </tr>
          <% end %>
          <tr>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>
  </li>
  <% end %>
  </ul>
</div> 
<div id='friends'>
  <% @friends.each do |friend| %>
    <a href="<%= list_item_path(friend.user) %>" id='<%= friend.id %>'>
      <p>
        <%= friend.name %><br />
        <span>
          <%= friend.user.try(:list_items).try(:last).try(:title) %>
        </span>
      </p>
    </a>
  <% end %>
</div>
<div class='clear'></div>
<div id='email'>
  <%= form_tag(send_list_items_path) do %>
    <%= email_field_tag :email %>
    <%= submit_tag 'send list items' %>
  <% end %>
</div>